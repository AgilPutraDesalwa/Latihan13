<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etFirst"
        android:layout_width="300dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="First Name"
        tools:ignore="Autofill,HardcodedText,LabelFor" />

    <EditText
        android:id="@+id/etLast"
        android:layout_width="300dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/etFirst"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Last Name"
        tools:ignore="Autofill,HardcodedText,LabelFor" />

    <Button
        android:id="@+id/btLoad"
        android:layout_below="@+id/etLast"
        android:layout_margin="16dp"
        android:layout_alignStart="@+id/etFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load"
        tools:ignore="HardcodedText,RtlCompat" />

    <Button
        android:id="@+id/btSave"
        android:layout_margin="16dp"
        android:layout_alignEnd="@+id/etLast"
        android:layout_below="@+id/etLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        tools:ignore="HardcodedText,RtlCompat" />

    <TextView
        android:id="@+id/tvResult"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_below="@+id/btLoad"
        android:layout_marginTop="60dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:ignore="HardcodedText" />
</RelativeLayout>